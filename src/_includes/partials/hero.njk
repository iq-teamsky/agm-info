<div class="hero" style="background-image: url(/assets/img/hero/{{backgroundImage}})">
    <div class="container">
        <div class="hero__inner">
            <div class="row">
                <div class="col-md-7 col-lg-6">
                    <div class="hero__content border-brand border-brand--top">
                        <h1 class="hero__title">{{ title | safe }}</h1>
                        <p class="hero__subtitle">{{ description }}</p>
                        <div class="hero__buttons">
                            <a href="/about-us" class="button-2">Get access now</a>
                            <button class="button-2" data-toggle="modal" data-target="#videoModal">Watch AGMinfo video</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>