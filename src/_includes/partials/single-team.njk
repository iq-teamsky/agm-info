<div class="col-sm-6 col-md-4 col-lg-3 single-team">
    <div class="inner">
        <div class="team-img">
            <img src="/assets/img/people/{{ member.data.image }}" alt="{{ alt }}">
        </div>
        <div class="team-content">
            {% if member.data.url %}
                <div class="team-social">
                    <a href="{{ member.data.url }}" class="fa fa-linkedin"></a>
                </div>
            {% endif %}
            <h3>{{ member.data.name }}</h3>
            {% if member.data.function %}
                <p>{{ member.data.function }}</p>
            {% endif %}
            {% if member.data.location %}
            <p>{{ member.data.location }}</p>
            {% endif %}
        </div>
    </div>
</div>