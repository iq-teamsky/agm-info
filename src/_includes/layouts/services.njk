{% extends "base.njk" %}

{% block content %}
    {% include "partials/page-title.njk" %}
    <!-- services -->
    <div class="service-area bg2 sp">
        <div class="container">
            <div class="section-title">
                <h2>Our Services</h2>
            </div>
            <div class="row">
                {%- for service in collections.services -%}
                <div class="col-lg-6 col-md-6 single-service">
                    <div class="inner">
                        <div class="title">
                            <h3 class="h4">{{ service.data.title }}</h3>
                        </div>
                        <div class="content">
                            {{ service.templateContent | safe }}
                        </div>
                    </div>
                </div>
                {%- endfor -%}
            </div>
        </div>
    </div>
{% endblock content %}